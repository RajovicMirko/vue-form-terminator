{
  "$schema": "http://json-schema.org/schema#",
  "title": "Positioning Schema v1.0.0",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "title": {
      "type": "string",
      "default": "",
      "enum": ["", "left", "center", "right"]
    },

    "group": {
      "type": "object",
      "additionalProperties": false,

      "properties": {
        "title": {
          "type": "string",
          "default": "",
          "enum": ["", "none", "left", "center", "right"]
        }
      }
    },

    "input": {
      "type": "object",
      "additionalProperties": false,

      "properties": {
        "label": {
          "type": "string",
          "default": "top left",
          "enum": [
            "",
            "none",
            "top",
            "bottom",
            "top left",
            "top center",
            "top right",
            "bottom left",
            "bottom center",
            "bottom right"
          ]
        },
        "text": {
          "type": "string",
          "default": "left",
          "enum": ["", "left", "center", "right"]
        },
        "errorMessage": {
          "type": "string",
          "default": "top right",
          "enum": [
            "",
            "none",
            "top",
            "bottom",
            "top left",
            "top center",
            "top right",
            "bottom left",
            "bottom center",
            "bottom right"
          ]
        }
      }
    }
  }
}
