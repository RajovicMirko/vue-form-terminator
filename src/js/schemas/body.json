{
  "$schema": "http://json-schema.org/schema#",
  "title": "Body Schema v1.0.0",
  "type": "array",
  "items": {
    "oneOf": [
      { "$ref": "#/definitions/singleItem" },
      { "$ref": "#/definitions/groupItem" }
    ]
  },

  "definitions": {
    "groupItem": {
      "type": "object",
      "additionalProperties": false,

      "properties": {
        "isGroup": {
          "type": "boolean"
        },

        "title": {
          "type": "string",
          "default": ""
        },

        "otherClasses": {
          "type": "string",
          "default": ""
        },

        "elements": {
          "type": "array",
          "items": { "$ref": "#/definitions/singleItem" }
        }
      },

      "required": ["isGroup", "elements"]
    },

    "singleItem": {
      "type": "object",
      "additionalProperties": false,

      "properties": {
        "id": {
          "type": "string",
          "default": ""
        },

        "name": {
          "type": "string",
          "default": ""
        },

        "type": {
          "type": "string",
          "default": "",
          "enum": ["text", "number", "email", "password", "checkbox"]
        },

        "label": {
          "type": "string",
          "default": ""
        },

        "placeholder": {
          "type": "string",
          "default": ""
        },

        "otherClasses": {
          "type": "string",
          "default": ""
        },

        "value": {
          "type": ["array", "boolean", "integer", "number", "object", "string"],
          "default": ""
        },

        "validations": {
          "type": "object",
          "additionalProperties": false,

          "properties": {
            "test": {},

            "compareElements": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "value": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              }
            },

            "email": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            },

            "min": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "value": {
                  "type": "integer"
                },
                "message": {
                  "type": "string"
                }
              }
            },

            "max": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "value": {
                  "type": "integer"
                },
                "message": {
                  "type": "string"
                }
              }
            },

            "noWhiteSpace": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            },

            "numberOnly": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            },

            "required": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },

      "required": ["id", "type"]
    }
  }
}
